<p id="notice"><%= notice %></p>

<h1>Hosts</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to "First Name", hosts_path(:sort => true, :by => "first_name", :order => (params[:order] == "asc" ? "desc" : "asc")) %></th>
      <th><%= link_to "Last name", hosts_path(:sort => true, :by => "last_name", :order => (params[:order] == "asc" ? "desc" : "asc")) %></th>
      <th>Sex</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hosts.each do |host| %>
      <tr>
        <td><%= host.first_name if can? :read, Host%></td>
        <td><%= host.last_name if can? :read, Host %></td>
        <td><%= host.sexo if can? :read, Host %></td><td>
        <td><%= host.age if can? :read, Host %></td>
        <td><%= link_to 'Show', host if can? :show, Host %></td>
        <td><%= link_to 'Edit', edit_host_path(host) %></td>
        <td><%= link_to 'Destroy', host, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @hosts %>
<br>

